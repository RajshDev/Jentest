@model IOAS.Models.STEViewModel
@using IOAS.GenericServices
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- favicon icon -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Poppins:400,400i,700,700i&display=swap" rel="stylesheet">
    <style>
        .umr-body {
            /*font-family: 'Poppins', sans-serif;*/
            font-family: 'Poppins', sans-serif !important;
            font-size: 14px;
            color: #2a2a2a;
            margin-left: 15px;
            margin-right: 15px;
        }

            .umr-body li {
                margin-bottom: 10px;
            }

        .tp-tt {
            margin-top: 20px;
            text-decoration: underline;
            font-weight: bold;
        }

        .ct-in h2 em {
            float: left;
            font-style: normal;
            width: calc(100% - 250px);
            text-align: center;
            padding-top: 35px;
            font-size: 20px;
        }

        .mt-md {
            margin-top: 30px;
        }

        .mn-m-tt {
            font-size: 20px;
            padding-bottom: 5px;
        }

        .mn-tt {
            font-size: 16px;
            padding-bottom: 5px;
            border-bottom: 1px solid #000;
        }

        h5 {
            font-weight: bold;
        }

        .table > tbody > tr > td, .table > tbody > tr > th, .table > tfoot > tr > td, .table > tfoot > tr > th, .table > thead > tr > td, .table > thead > tr > th {
            border: 0px;
        }

        .bg-grey {
            background: #ccc;
        }

        .tbl-style > .table > tbody > tr > td {
            border: inherit;
        }

        .tbl-style > .table > tbody > tr > th {
            border: inherit;
        }

        .tbl-style > .table > thead > tr {
            border-color: #000;
        }

            .tbl-style > .table > thead > tr > td {
                border: 1px solid #000;
            }

        .tbl-style > .table-bordered > thead > tr > th {
            border-bottom-width: 0px;
        }

        .tbl-style > .table.table-bordered > tbody > tr > td {
            border-color: #000;
        }

        .tp-tt {
            font-weight: bold;
        }

        .tbl-style > .table-bordered > thead > tr > th {
            border: 1px solid #000;
        }

        .tbl-style table, .tbl-style tr, .tbl-style td, .tbl-style th {
            border: 1px solid #000;
        }

        .tbl-style > .table {
            margin-top: 10px;
            margin-bottom: 10px;
        }
    </style>
</head>
<body class="umr-body">
    <div style="page-break-after:always">
        <div class="row">
            <div class="col-md-12">
                <p>@Model.EmployeeID</p>
                <center><h4><b>CENTRE FOR</b></h4></center>
                <center><h4><b>INDUSTRIAL CONSULTANCY & SPONSORED RESEARCH</b></h4></center>
                <center><h4><b>INDIAN INSTITUTE OF TECHNOLOGY MADRAS,I.I.T. CAMPUS,CHENNAI-600 036</b></h4></center>
                <p class="text-left"><b>No: @Model.ApplicationNo</b></p>
                <p class="text-right"><b>Dated: @string.Format("{0:dd-MMMM-yyyy}", Model.offerDate)</b></p>
            </div>
            <div class="col-md-12">
                <p><b>To</b></p>
                <p style="margin-left:15px;">
                    <b>
                        @Model.Name.ToUpper()<br />
                        @Model.PresentAddress.ToUpper()
                    </b>
                </p>
                <p>
                    Dear <b>@Model.Name.ToUpper()</b>,
                </p>
                <p>
                    Sub: Short-term appointment to the post of <b>@Model.Designation</b> for the <b>@Model.ProjectDetailsModel.SponsoringAgency</b> project
                    on <b>@Model.ProjectDetailsModel.ProjectTitle</b>. in the
                    @if (Model.StaffCategory == "Project Staff")
                    {
                        <b>
                            Dept.of @Model.ProjectDetailsModel.PIDepartmentName
                        </b>
                    }
                    else
                    {
                        <b>
                            Dept.of Centre for IC & SR
                        </b>
                    }
                </p>
                <p>
                    With the approval of the competent Authority, we are pleased to offer you appointment as
                    <b>@Model.Designation</b> in the above project. Your appointment will be for the period from
                    <b>@Model.Appointmentstartdate to @Model.AppointmentEndDate.</b>
                </p>
                <p>
                    You will be paid a consolidated remuneration of Rs.@Model.ConsolidatedPayPerMonth /- p.m. (Rupees @CoreAccountsService.words(Model.ConsolidatedPayPerMonth)) No other allowance will be paid to you.
                </p>
                <p>
                    We are enclosing the other Terms and Conditions.
                </p>
                <p>
                    You are requested to send your joining report.
                </p>
                <p>
                    We request you to kindly acknowledge receipt of this letter and return the enclosed copy of
                    Terms and Conditions duly signed.
                </p>
                <p>
                    Best Whishes.<br /><br /><br />
                    SENIOR MANAGER - HR<br />
                    (Project Recruitment)<br />
                    IC & SR
                </p>
            </div>
        </div>
    </div>
    <div style="page-break-after:always">
        <div class="row">
            <div class="col-md-12">
                <center>TERMS AND CONDITIONS</center>
                <ol style="margin:15px;">
                    <li>
                        Your services and conduct will be governed by the rules of the centre for IC & SR and any
                        other administrative orders in force from time to time at this centre in addition to those which
                        are specifically mentioned hereunder.
                    </li>
                    <li>
                        Your appointment is for the period from <b>@Model.Appointmentstartdate to @Model.AppointmentEndDate.</b> with effect from the date of
                        joining and is terminable with one week’s prior notice on either side.
                    </li>
                    <li>
                        <ol type="a">
                            @if (Model.ConsolidatedPay)
                            {
                                <li>
                                    You will be paid a
                                    <b>consolidated remuneration of Rs. @Model.ConsolidatedPayPerMonth /- p.m. (Rupees @CoreAccountsService.words(Model.ConsolidatedPayPerMonth) Only) during the period of your engagement.</b>
                                </li>
                            }
                            else
                            {
                                <li>
                                    You will be paid a
                                    of <b>Rs. @Model.ConsolidatedPayPerMonth /- p.m. (Rupees @CoreAccountsService.words(Model.ConsolidatedPayPerMonth) Only)</b> during the period of your engagement.
                                </li>
                            }
                            <li>No additional allowances will be paid beyond the remuneration.</li>
                        </ol>
                    </li>

                    <li>
                        You will be eligible for leave at the rate of 2 1⁄2 days as per calendar month to be availed
                        during the tenure of this appointment.
                    </li>
                    <li>
                        Facilities of benefits like pension, provident fund etc. are not available under this offer.
                    </li>
                    <li>
                        You will be reporting to Prof. <b>@Model.ProjectDetailsModel.PIName</b> project Co-ordinator, Dept.of @Model.ProjectDetailsModel.PIDepartmentName
                    </li>
                    <li>
                        If and when your presence is warranted outside the working hours or on holidays due to
                        exigencies of work you will make yourself available for the same.
                    </li>
           
                </ol>
                <br /><br /><br />
                <p>
                    <b>Note: You will be enrolled into our group 'Medical Insurance Scheme'.</b>
                </p>
                <p class="text-center" style="float:right;">
                    Best Whishes.<br /><br /><br />
                    SENIOR MANAGER - HR<br />
                    (Project Recruitment)<br />
                    IC & SR
                </p>
                <p>
                    I agree to the above terms & conditions.
                </p>
                <center>
                    <b>@Model.Name.ToUpper()</b>
                </center>
            </div>
        </div>
    </div>
    <!-- main js files -->
    <script src="js/plugins/jquery-2.2.4.min.js"></script>
    <script src="js/bootstrap.js"></script>
</body>
</html>
