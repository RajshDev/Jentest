<script type="text/javascript">
    
    function CalculateDeductionTotal() {
                   var ttlExpVal = 0, ttlDrVal = 0, ttlDedtVal = 0;
        $('#tbodyExpenseList input[name$=".TransactionType"]').each(function (i, rowEle) {
            if ($(this).val() == 'Credit') {
                var parseVal = parseFloat($(this).closest('tr').find("input[name$='.Amount']").val());
                if (!isNaN(parseVal))
                    ttlExpVal = ttlExpVal + parseVal;
               // ttlExpVal = ttlExpVal;
            } else if ($(this).val() == 'Debit') {
                var parseVal = parseFloat($(this).closest('tr').find("input[name$='.Amount']").val());
                if (!isNaN(parseVal))
                    ttlDrVal = ttlDrVal + parseVal;
               // ttlDrVal = ttlDrVal;
            }
        });
        //$('#tbodyExpenseList input[name$=".Amount"]').each(function (i, rowEle) {
        //    var parseVal = parseFloat($(this).val());
        //    if (!isNaN(parseVal))
        //        ttlExpVal = ttlExpVal + parseVal;
        //});
        //$('#ExpenseAmount').val(ttlExpVal);
        $('#tbodyDeductionList input[name$=".Amount"]').each(function (i, rowEle) {
            var parseVal = parseFloat($(this).val());
            if (!isNaN(parseVal))
                ttlDedtVal = ttlDedtVal + parseVal;
            //ttlDedtVal = ttlDedtVal;
        });
        ttlDrVal = parseFloat(ttlDrVal);
        var tlCrs = parseFloat(ttlDrVal + ttlDedtVal);
        ttlExpVal = ttlExpVal.toFixed(2);
        ttlDedtVal = ttlDedtVal.toFixed(2);

        $('#ExpenseAmount').val(ttlExpVal);
        $('#DeductionAmount').val(ttlDedtVal);
        $('#ttlDr').val(ttlExpVal);
        $('#ttlCr').val(tlCrs);
        //$("#CreditorAmount").val(parseFloat($('#lblAdvTtlAmt').text()));
    }
    function FillTransactionDetails() {
        var subcode = $('#SubCode').val();

        var bankid = $('#BankId :selected').val();
        var bankname = $('#BankId :selected').text();
        var tCode = $('#TransactionTypeCode').val();
        var stateCode = $('#lblStateCode').html() || null;
        var interstate = null
        if (stateCode != null)
            interstate = IsInterState(stateCode);
        var cpyTDSObj = {};
        if (typeof TDSObj != 'undefined')
            cpyTDSObj = TDSObj;
        EmptyExpenseDeductionDetails();
        $.ajax({
            type: "GET",
            url: "@Url.Action("GetTransactionDetails", "CoreAccounts")",
            data: { "interstate_f": interstate, "typeCode": tCode, "tSubCode": subcode },
            traditional: true,
            dataType: "json",
            success: function (result) {
                $.each(result.ExpenseDetail, function (i, item) {
                    var isHaveTdsArry = false;
                    var variableName = item.VariableName || "";
                    var variableValue = parseFloat($('#' + variableName).val()) || 0;
                    if (variableName.indexOf('varBank') != -1 && variableValue == 0)
                        variableValue = parseFloat($('#varBank').val()) || 0;
                    else if (variableName.indexOf('varTDSIT') != -1 && !isEmpty(cpyTDSObj))
                        isHaveTdsArry = true;
                    else if (variableName.indexOf('varTDSIT') != -1 && variableValue == 0)
                        variableValue = parseFloat($('#varTDSIT').val()) || 0;
                    else if (variableName.indexOf('varTDSGST') != -1 && variableValue == 0)
                        variableValue = parseFloat($('#varTDSGST').val()) || 0;
                    if (i == 0) {
                        var trEle = $('#tbodyExpenseList tr:first');
                        $(trEle).find('input[name$=".Amount"]').val(variableValue);
                        $(trEle).find('input[name$=".TransactionType"]').val(item.TransactionType);
                        $(trEle).find('input[name$=".IsJV"]').val(item.IsJV);
                        $(trEle).find('#lblTransType').text(item.TransactionType);
                        $(trEle).find("input[name='ExpenseDetail.Index']").val(i);
                        var selectGroup = $(trEle).find('select[name$=".AccountGroupId"]');
                        selectGroup.empty();
                        $.each(item.AccountGroupList, function (idx, itemData) {
                            selectGroup.append($('<option/>', {
                                value: itemData.id,
                                text: itemData.name,
                            }));
                        });

                        var selectHead = $(trEle).find('select[name$=".AccountHeadId"]');
                        selectHead.empty();
                        var grpId = $(trEle).find('select[name$=".AccountGroupId"]').val();
                        

                        if (grpId == 38 && item.AccountHeadList.length > 1) {
                           

                            //if (bankid != null && bankname != null)
                            //{
                            //    selectHead.append($('<option/>', {
                            //        value: bankid,
                            //        text: bankname,
                            //    }));
                            //}
                            //else
                            //{ 
                                selectHead.append($('<option/>', {
                                    value: "",
                                    text: "Select any",
                                }));

                           // }
                           
                        }
                        $.each(item.AccountHeadList, function (idx, itemData) {
                            selectHead.append($('<option/>', {
                                value: itemData.id,
                                text: itemData.name,
                            }));
                        });
                    } else {
                        var trEleNew = $('#tbodyExpenseList tr:first').clone().find('input').val('').end();
                        var index = $('#tbodyExpenseList tr:last').find("input[name='ExpenseDetail.Index']").val();
                        index = parseInt(index) + 1;
                        $(trEleNew).find('input[name$=".Amount"]').val(variableValue);
                        $(trEleNew).find("input[name='ExpenseDetail.Index']").val(index);
                        $(trEleNew).find('input[name$=".TransactionType"]').val(item.TransactionType);
                        $(trEleNew).find('input[name$=".IsJV"]').val(item.IsJV);
                        $(trEleNew).find('#lblTransType').text(item.TransactionType);
                        $(trEleNew).find("input,Select").each(function () {
                            $(this).attr("name", $(this).attr("name").replace(/\d+/, index));
                            $(this).attr("id", $(this).attr("id").replace(/\d+/, index));
                        });
                        $(trEleNew).find("span[data-valmsg-for]").each(function () {
                            $(this).attr("data-valmsg-for", $(this).attr("data-valmsg-for").replace(/\d+/, index));
                        });

                        var selectGroup = $(trEleNew).find('select[name$=".AccountGroupId"]');
                        selectGroup.empty();
                        $.each(item.AccountGroupList, function (idx, itemData) {
                            selectGroup.append($('<option/>', {
                                value: itemData.id,
                                text: itemData.name,
                            }));
                        });
                        
                        var selectHead = $(trEleNew).find('select[name$=".AccountHeadId"]');
                        selectHead.empty();
                        var grpId = $(trEleNew).find('select[name$=".AccountGroupId"]').val();
                        if (grpId == 38 && item.AccountHeadList.length > 1) {                          
                            //selectHead.append($('<option/>', {
                            //    value: "",
                            //    text: "Select any",
                            //}));
                            //if (bankid != null && bankname != null) {
                            //    selectHead.append($('<option/>', {
                            //        value: bankid,
                            //        text: bankname,
                            //    }));
                            //}
                            //else {
                                selectHead.append($('<option/>', {
                                    value: "",
                                    text: "Select any",
                                }));

                          //  }
                        }                        
                       
                        $.each(item.AccountHeadList, function (idx, itemData) {
                            selectHead.append($('<option/>', {
                                value: itemData.id,
                                text: itemData.name,
                            }));
                        });
                        if (isHaveTdsArry) {
                            var indxTds = 0;
                            for (var tdsKey in cpyTDSObj) {
                                var pct = tdsKey.substring(tdsKey.lastIndexOf('_') + 1);
                                var section = tdsKey.substring(tdsKey.indexOf('_') + 1, tdsKey.lastIndexOf('_'));
                                var partialSec = '(' + section + ') ' + pct + '%';
                                if (indxTds == 0) {
                                    selectHead.find("option:contains(" + partialSec + ")").attr('selected', 'selected');
                                    $(trEleNew).find('input[name$=".Amount"]').val(cpyTDSObj[tdsKey]);
                                    $('#tbodyExpenseList').append(trEleNew);
                                } else {
                                    var index = $('#tbodyExpenseList tr:last').find("input[name='ExpenseDetail.Index']").val();
                                    index = parseInt(index) + indxTds;
                                    var clnLastTr = $('#tbodyExpenseList tr:last').clone();
                                    $(clnLastTr).find("input[name='ExpenseDetail.Index']").val(index);
                                    $(clnLastTr).find("input,Select").each(function () {
                                        $(this).attr("name", $(this).attr("name").replace(/\d+/, index));
                                        $(this).attr("id", $(this).attr("id").replace(/\d+/, index));
                                    });
                                    $(clnLastTr).find("span[data-valmsg-for]").each(function () {
                                        $(this).attr("data-valmsg-for", $(this).attr("data-valmsg-for").replace(/\d+/, index));
                                    });
                                    selectHead.find("option:contains(" + partialSec + ")").attr('selected', 'selected');
                                    $(clnLastTr).find('input[name$=".Amount"]').val(cpyTDSObj[tdsKey]);
                                    $('#tbodyExpenseList').append(clnLastTr);
                                }
                                indxTds = indxTds + 1;
                            }
                        } else
                            $('#tbodyExpenseList').append(trEleNew);
                    }
                });
                $.each(result.DeductionDetail, function (i, item) {
                    var variableName = item.VariableName || "";
                    var variableValue = parseFloat($('#' + variableName).val()) || 0;
                    if (i == 0) {
                        var trEle = $('#tbodyDeductionList tr:first');
                        var amtEle = $(trEle).find('input[name$=".Amount"]');
                        amtEle.addClass('required');
                        $(trEle).find('input[name$=".Amount"]').val(variableValue);
                        $(trEle).find('input[name$=".AccountGroupId"]').val(item.AccountGroupId);
                        $(trEle).find('input[name$=".DeductionHeadId"]').val(item.DeductionHeadId);
                        $(trEle).find('input[name$=".DeductionHead"]').val(item.DeductionHead);
                        $(trEle).find('input[name$=".AccountGroup"]').val(item.AccountGroup);
                        $(trEle).find('td:nth-child(1)').html(item.AccountGroup);
                        $(trEle).find('td:nth-child(2)').html(item.DeductionHead);
                    } else {
                        var trEleNew = $('#tbodyDeductionList tr:first').clone().find('input').val('').end();
                        $(trEleNew).find("input").each(function () {
                            $(this).attr("name", $(this).attr("name").replace(/\d+/, i));
                            $(this).attr("id", $(this).attr("id").replace(/\d+/, i));
                        });
                        $(trEleNew).find("span[data-valmsg-for]").each(function () {
                            $(this).attr("data-valmsg-for", $(this).attr("data-valmsg-for").replace(/\d+/, i));
                        });
                        var amtEle = $(trEleNew).find('input[name$=".Amount"]');
                        amtEle.addClass('required');
                        $(trEleNew).find('input[name$=".Amount"]').val(variableValue);
                        $(trEleNew).find('input[name$=".AccountGroupId"]').val(item.AccountGroupId);
                        $(trEleNew).find('input[name$=".DeductionHeadId"]').val(item.DeductionHeadId);
                        $(trEleNew).find('input[name$=".DeductionHead"]').val(item.DeductionHead);
                        $(trEleNew).find('input[name$=".AccountGroup"]').val(item.AccountGroup);
                        $(trEleNew).find('td:nth-child(1)').html(item.AccountGroup);
                        $(trEleNew).find('td:nth-child(2)').html(item.DeductionHead);
                        $('#tbodyDeductionList').append(trEleNew);
                    }
                });
                $('#NeedUpdateTransDetail').val('false');
                CalculateDeductionTotal();
            },
            error: function (err) {
                console.log("error : " + err);
            }
        });
    }
    function EmptyExpenseDeductionDetails() {
        $('#tbodyDeductionList tr').not(':first').remove();
        $('#tbodyDeductionList tr td').find('input, select').val('');
        $('#tbodyDeductionList tr td').find('h4').html('');
        $('#tbodyExpenseList tr').not(':first').remove();
        $('#tbodyExpenseList tr td').find('input').val('');
        $('#tbodyDeductionList tr td').not(':last').html('');
    }
    $('#btnAddExpense').click(function () {
        AddNewExpense();
    });
    $('#btnReset').click(function () {
