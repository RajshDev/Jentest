@model IOAS.Models.ProposalStatusUpdateModel
@{
    ViewBag.Title = "ProposalStatusChanger";
    Layout = "~/Views/Shared/_LayoutFluid.cshtml";
}
<div class="row hd-tt-bg">
    <div class="col-md-12">
        <h4><b>Proposal Status Changer</b> </h4>
    </div>
</div>
<style>
    .vw-dts-bg .hgt-bg {
        background: #597df0;
        color: #fff;
    }

        .vw-dts-bg .hgt-bg label {
            font-size: 16px !important;
            color: #fff !important;
        }

        .vw-dts-bg .hgt-bg h4 {
            font-size: 18px !important;
            color: #fff;
        }

    .vw-dts-bg .hgt-bg-pl {
        background: #e11eda;
        color: #fff;
    }

        .vw-dts-bg .hgt-bg-pl label {
            font-size: 16px !important;
            color: #fff !important;
        }

        .vw-dts-bg .hgt-bg-pl h4 {
            font-size: 18px !important;
            color: #fff;
        }
</style>
<div class="row">
    <div class="white-bg ad-navbar">

        <div class="col-md-3 ds-spl-bg">
            <div class="ds-icn">
                <i class="ion-ios-list-outline "></i>
            </div>
            <div class="ds-tt">
                <span class="required">Proposal Number</span>
                <input type="text" class="form-control" autocomplete="off" name="ProsalNo" id="prosalno" />
                <input type="text" class="form-control dis-none" autocomplete="off" name="ProsaNolId" id="prosalId" />
            </div>
        </div>
        <div class="col-md-3 ds-spl-bg">
            <div class="ds-tt">
                <span>The Current Status is</span>
                <label id="Status"></label>
                <span>. Its to be updated as</span>
                <label id="UpStatus"></label>
            </div>
        </div>
        <div class="col-md-3 ds-spl-bg">
            <div class="ds-tt">
                <input type="submit" value="Update" class="btn btn-primary mt-20" id="btnSubmit" />
            </div>
        </div>

    </div>
</div>
<div id="popup"></div>
<script>

    $(document).on('click', '#prosalno', function () {
       applyAutoComplete($('#prosalno'), $('#prosalId'), '@Url.Action("LoadAllProposalNumber", "Project")', 'ProposalStatus', undefined, undefined);
       ProposalStatus();
    });
    $('#btnSubmit').click(function () {
        var proposalId = $("#prosalId").val();
        var Status = $("#UpStatus").text();
        if (proposalId != "" && proposalId != 0 && Status != "") {
            $.getJSON("@Url.Action("UpdateProposalStatus", "Project")", { ProposalId: proposalId, Status: Status },
        function (result) {
            if (result.Message == "Success") {
                $('#alertSuccess').html("It has been updated successfully.");
                $('#Success').modal('toggle');
                $("#prosalId,#prosalno").val('');
                $("#UpStatus,#Status").text('');
            } else {
                $('#FailedAlert').html("Something went wrong please contact administrator");
                $('#Failed').modal('toggle');
                $("#prosalId,#prosalno").val('');
                $("#UpStatus,#Status").text('');
            }
        });
        } else {
            $('#FailedAlert').html("Proposal No field required");
            $('#Failed').modal('toggle');
        }
    });
    function ProposalStatus()
    {
        var proposalId = $("#prosalId").val();
        if (proposalId != "" || proposalId != 0) {
            $.getJSON("@Url.Action("GetProposalStatus", "Project")", { ProposalId: proposalId },
        function (result) {
            $("#Status").text(result);
            if (result == "Active")
                $("#UpStatus").text('Open');
            else
                $("#UpStatus").text('Active');

        });
    }
    }
</script>
