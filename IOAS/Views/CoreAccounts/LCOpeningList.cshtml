                         statusList = [{ id: "", name: "Select Action" }, { id: "ViewEstablish", name: "View" }, { id: "PrintEstablishLCWithoutChange", name: "Print LC Without Changes" }, { id: "PrintEstablishLCWithChange", name: "Print LC With Changes" }]
                     }
