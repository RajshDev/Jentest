    function loadDetails() {

        var input = [];
        input = {
            SearchEXLCReferencenumber: $('#srchLCReferencenumber').val(),
            SearchEXProjectNumber: $('#srchprojectnumber').val(),
            SearchEXBeneficiaryName: $('#srchBeneficiaryName').val(),
            FromDate: $('#FromDate').val() || null,
