                                 //        $('#gridlist').show();
                                 //        $('#addnewpage').show();
                                 //    },
                                 //    error: function (err) {
                                 //        console.log("error : " + err);
                                 //    }
                                 //});
                             }
                         }
                         else if (selVal == "PrintLCDraft") {
                             var url = '@Url.Action("LCDraftdownload", "ReportMaster")?LCdraftId=' + item.LCOpeningId;
                             window.open(url, '_blank');
                         }
                         else if (selVal == "PrintEstablishLCWithoutChange") {
                             var url = '@Url.Action("LCEstablishWithoutChangedownload", "ReportMaster")?LCdraftId=' + item.LCOpeningId;
                             window.open(url, '_blank');
                         }
                         else if (selVal == "PrintEstablishLCWithChange") {
                             var url = '@Url.Action("LCEstablishWithChangesdownload", "ReportMaster")?LCdraftId=' + item.LCOpeningId;
                             window.open(url, '_blank');
                         }
                         else if (selVal == "View") {
                             var url = '@Url.Action("LCOpeningView", "CoreAccounts")?LCdraftId=' + item.LCOpeningId;
                             window.location.href = url;
                         }
                         else if (selVal == "ViewEstablish") {
                             var url = '@Url.Action("LCOpeningEstablishView", "CoreAccounts")?LCdraftId=' + item.LCOpeningId;
                             window.location.href = url;
                         }
                         $(this).val("");
                         return false;
                         e.stopPropagation();
                     });

                     return $result.add($customSelect);
                 },
                 _createFilterSwitchButton: function () {
                     return this._createOnOffSwitchButton("filtering", this.searchModeButtonClass, false);
                 }
             }


        ],

    });
    $("#LCOpeningList").jsGrid("option", "filtering", false);
