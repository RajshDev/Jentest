                             var url = '@Url.Action("LCOpening", "CoreAccounts")?LCdraftId=' + item.LCOpeningId + '&isEstablish=' + true;
                             window.location.href = url;
                         }
                         else if (selVal == "EditEstablish") {
                             var url = '@Url.Action("LCOpening", "CoreAccounts")?LCdraftId=' + item.LCOpeningId + '&isEditEstablish=' + true;
                             window.location.href = url;
                         }
                         else if (selVal == "Submit for Approval") {

                             var approveurl = 'LCSubmitforApproval';
                             var choice = confirm("Are you sure, Do you want to submit this LC for approval process?");
                             if (choice === true) {

                                 $.ajax({
                                     type: "GET",
                                     url: approveurl,
                                     data: { LCOpeningId: item.LCOpeningId },
                                     contentType: "application/json; charset=utf-8",
                                     success: function (result) {
                                         var reslt = result;
                                         if (result.status == true) {
                                             $('#alertSuccess').html("LC has been submited for approval successfully.");
                                             $('#Success').modal('toggle');
                                             loadDetails();
                                         } else if (result.status == false) {
                                             $('#FailedAlert').html("Something went wrong please contact administrator");
                                             $('#Failed').modal('toggle');
                                         }
                                     },
                                     error: function (err) {
                                         console.log("error1 : " + err);
                                     }
                                 });
                                 loadDetails();
                                 
                             }
                         }
                         else if (selVal == "Approve") {

                             var approveurl = 'LCOpeningApprove';
                             var choice = confirm("Are you sure, Do you want to Approve this LC?");
                             if (choice === true) {

                                 $.ajax({
                                     type: "GET",
                                     url: approveurl,
                                     data: { LCOpeningId: item.LCOpeningId },
                                     contentType: "application/json; charset=utf-8",
                                     success: function (result) {
                                         var reslt = result;
                                         if (result.status == true) {
                                             $('#alertSuccess').html("LC has been approved successfully.");
                                             $('#Success').modal('toggle');
                                             loadDetails();
                                         } else if (result.status == false) {
                                             $('#FailedAlert').html("Something went wrong please contact administrator");
                                             $('#Failed').modal('toggle');
                                         }
                                     },
                                     error: function (err) {
                                         console.log("error1 : " + err);
                                     }
                                 });
                                 loadDetails();
