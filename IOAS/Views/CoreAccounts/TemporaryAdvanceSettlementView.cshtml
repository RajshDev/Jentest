                                pendingamount += parseFloat(itemData.amount);
                                $("#txtPendingSettlementamt").val(pendingamount.toFixed(0));
                                $("#txtNoofUnsettledAdv").val(itemData.count);
                                $("#txtPendingSettlementAdvNum").val(locationdata[0].name + ", " + locationdata[1].name);
                                i++
                            });
