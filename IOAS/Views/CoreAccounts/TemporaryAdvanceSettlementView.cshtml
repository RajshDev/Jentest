                                $("#txtNoofUnsettledAdv").val(itemData.count);
                                $("#txtPendingSettlementAdvNum").val(locationdata[0].name);
                                i++
                            });
                            $("#Pendsettlemntnos").find('a.dis-none').removeClass('dis-none');
                        }
