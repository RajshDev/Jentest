    function searchData(href) {
        if (loadedList.indexOf(href) > -1)
            return false;
        if (href == "#tabJsLPOSG")
            $("#gridDataOSG").jsGrid("search");
        else if (href == "#tabJsLPCON")
            $("#gridDataCON").jsGrid("search");
    }
