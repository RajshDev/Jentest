                     });
                     $customSelect.change(function (e) {
                         var selVal = $(this).val();
                         if (selVal == "Modify") {
                             var url = '@Url.Action("Stoppayment", "Requirement")?appid=' + item.ID + '&apptype=' + item.CategoryName + '&orderid=' + item.OrderID + '&listf=SPLOP';
