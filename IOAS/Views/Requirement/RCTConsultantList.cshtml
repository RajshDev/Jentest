                     var statusList = [];
                     var $result = jsGrid.fields.control.prototype.itemTemplate.apply(this, arguments);
                     if (item.Consultant_Status == "Open") {
                         statusList = [{ id: "", name: "Action" }, { id: "Edit", name: "Edit" }, { id: "View", name: "View" }]
                     }
                     else if (item.Consultant_Status == "Open") {
                         statusList = [{ id: "", name: "Action" }, { id: "View", name: "Commitment Booking" }, { id: "SendOffer", name: "Send Offer Letter" }]
                     }
                     else if (item.Consultant_Status == "Open") {
                         statusList = [{ id: "", name: "Action" }, { id: "View", name: "Commitment Booking" }]
                     }
                     else if (item.Consultant_Status == "Committee Clarify") {
                         statusList = [{ id: "", name: "Action" }, { id: "View", name: "Send for commitee approval" }]
                     }
                     else if (item.Consultant_Status == "Open") {
                         statusList = [{ id: "", name: "Action" }, { id: "View", name: "Send for commitment booking" }]
                     }
                     else if (item.Consultant_Status == "Draft") {
                         statusList = [{ id: "", name: "Action" }, { id: "Edit", name: "Edit" }, { id: "View", name: "View" }]
