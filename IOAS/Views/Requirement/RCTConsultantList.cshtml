<script>
    var errMsg = '@TempData["errMsg"]';
    var succMsg = '@TempData["succMsg"]';
    var alertMsg = '@TempData["alertMsg"]';
    $(document).ready(function () {
        if (succMsg != '') {
            $('#alertSuccess').html(succMsg);
            $('#Success').modal('toggle');
        }
        else if (errMsg != '') {
            $('#FailedAlert').html(errMsg);
            $('#Failed').modal('toggle');
        }
        else if (alertMsg != '') {
            $('#alert').html(alertMsg);
            $('#Validation').modal('toggle');
        }
    });
    $("#gridConApp").jsGrid({
        paging: true,
        pageIndex: 1,
        pageSize: 10,
        editing: false,
        filtering: true,
        pageLoading: true,
        autoload: true,
        controller: {

            loadData: function (filter) {
                var searchData = [];
                searchData = {
                    Consultant_AppointmentId: filter.SE_Consultant_AppointmentId || null,
                    Consultant_EmpNo: filter.SE_Consultant_EmpNo || null,
                    Consultant_AppNo: filter.Consultant_AppNo || null,
                    Consultant_Name: filter.SE_Consultant_Name || null,
                    Consultant_EmpType: filter.SE_Consultant_EmpType || null,
                    Consultant_ProjectNumber: filter.SE_Consultant_ProjectNumber || null,
                    Consultant_ProjPI: filter.SE_Consultant_ProjPI || null,
                    Consultant_ProjEmail: filter.SE_Consultant_ProjEmail || null,
                    Consultant_Status: filter.SE_Consultant_Status || null
                },
                filter.model = searchData;
                var deferred = $.Deferred();
                $.ajax({
                    type: "post",
                    url: "GetRCTConsultantList",
                    data: JSON.stringify(filter),
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function (result) {
                        var da = {
                            data: result.ConsultantNewEntryList,
                            itemsCount: result.SE_TotalRecords
                        }
                        deferred.resolve(da);
                    },
                    error: function (err) {
                        console.log("error : " + err);
                    }

                });
                return deferred.promise();
            }

        },

        fields: [
            { name: "SE_SNo", title: "S.No", editing: false, width: 50 },
            { type: "number", name: "Consultant_AppointmentId", title: "Id", visible: false },
            { type: "text", name: "Consultant_EmpNo", title: "Employee Number", editing: false },
            { type: "text", name: "Consultant_AppNo", title: "Application Number", editing: false },
            { type: "text", name: "Consultant_Name", title: "Consultant Name", editing: false, width: 130 },
            { type: "text", name: "Consultant_EmpType", title: "Consultant Type", editing: false },
            { type: "text", name: "Consultant_ProjectNumber", title: "Project Number", editing: false },
     {
         type: "text", name: "Consultant_ProjectPI", title: "PI Name & Email", editing: false, width: 130,
         itemTemplate: function (item, name) {
             return $("<td>").append(name.Consultant_ProjectPI + "<br/><span class='fn-s-xs'>(" + name.Consultant_ProjectPIEmail + ")</span>");
         }
     },
     {
         type: "text", name: "Consultant_Status", title: "Status", editing: false,
         cellRenderer: function (item, value) {
             if (value.Consultant_Status == "Open" || value.SE_Consultant_Status == "Active") {
                 if (!value.SendOffer_f && value.isGovAgencyFund)
                     return $("<td>").addClass("bg-green").append(value.Consultant_Status);
                 else
                     return $("<td>").addClass("txt-bl").append(value.Consultant_Status);
             }
             else if (value.Consultant_Status == "Sent for approval") {
                 return $("<td>").addClass("txt-gr").append(value.Consultant_Status);
             }
             else if (value.Consultant_Status == "Cancel" || value.Consultant_Status == "Rejected") {
                 return $("<td>").addClass("txt-rd").append(value.Consultant_Status);
             }
             else if (value.Consultant_Status == "Draft" || value.Consultant_Status == "Awaiting Committee Approval") {
                 return $("<td>").addClass("txt-org").append(value.Consultant_Status);
             }
             else if (value.Consultant_Status == "Committee Clarify") {
                 return $("<td>").addClass("txt-rd").append(value.Consultant_Status);
             }
             else if (value.Consultant_Status == "Awaiting Verification") {
                 if (!value.SendOffer_f)
                     return $("<td>").addClass("bg-green").append(value.Consultant_Status);
                 else
                     return $("<td>").addClass("txt-org").append(value.Consultant_Status);
             }
             else if (value.Consultant_Status == "Note to PI" || value.Consultant_Status == "Awaiting Commitment Booking") {
                 return $("<td>").addClass("txt-org").append(value.Consultant_Status);
             }
             else if (value.Consultant_Status == "Open" && value.isGovAgencyFund == true) {
                 return $("<td>").addClass("txt-rd").append(value.Consultant_Status);
             }
             else {
                 return $("<td>").append(value.Consultant_Status);
             }
         }
     },
     //{ name: "EmailRemaindarCount", title: "Email Remaindar Count", visible: false },
             {
                 type: "control", editButton: false, deleteButton: false, width: 80, title: "Action",

