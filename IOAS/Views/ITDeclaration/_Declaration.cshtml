
@model IOAS.Models.ITDeclarationViewModel
<div class="page-wrapper">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group custom-form-group">
                        <span><b>Declaration</b></span>
                    </div>
                </div>
            </div>
            <div class="row mt-20 mb-md">
                <div class="col-md-6">
                    <div class="form-group custom-form-group">
                        <label><b>Remarks</b></label> <br />
                        @Html.Raw(@ViewBag.Remarks)
                    </div>
                </div>
            </div>
            <table class="table table-bordered mb-null">
                <tbody>
                    <tr>
                        <td>S.NO.</td>
                        <td>Particulars</td>
                        <td>Max Limit</td>
                        <td>Amount</td>
                    </tr>
                    @if (Model != null && Model.declaration != null)
            {
                var count = 1;
                foreach (var item in Model.declaration)
                {
                <tr>
                    <td>
                        @count
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Particulars)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.MaxLimit)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Amount)
                    </td>
                </tr>
                    count++;
                }
            }
                </tbody>

            </table>
        </div>
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group custom-form-group">
                        <span><b>Other Income</b></span>
                    </div>
                </div>
            </div>
            <table class="table table-bordered mb-null">
                <tbody>
                    <tr>
                        <td>S.NO.</td>
                        <td>Particulars</td>
                        <td>Remarks</td>
                        <td>Amount</td>
                    </tr>
                    @if (Model != null && Model.otherIncome != null)
            {
                var count = 1;
                foreach (var item in Model.otherIncome)
                {
                <tr>
                    <td>
                        @count
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Particulars)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Remarks)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Amount)
                    </td>
                </tr>
                    count++;
                }
            }
                </tbody>

            </table>
        </div>
    </div>
    </div>