@model IOAS.Models.ProfessionalTaxModel
@{
    ViewBag.Title = "ProfessionalTaxEntry";
    Layout = "~/Views/Shared/_LayoutFluid.cshtml";
}

<div class="row hd-tt-bg">
    <div class="col-md-12">
        <h4><b>Professional Tax Entry</b></h4>

    </div>
</div>
@using (Html.BeginForm("ProfessionalTaxEntry", "RequirementMaster", FormMethod.Post, new { @class = "", role = "form", @id = "formPT", enctype = "multipart/form-data" }))

{
<div class="row cts-mn-dts">
    <div class="page-wrapper mt30">
        <div>
            <div class="col-md-12">

                <div class="row">
                    <div class="col-md-12">

                        <div class="bl-lg-panel-box pb-null">
                            <div class="cmn-panel-box">
                                <div class="row ">
                                    <div class="col-md-3">
                                        <div class="form-group custom-form-group">
                                            <label class="required">Monthy Salary Rs. 3,500/</label>
                                           @Html.TextBoxFor(m=>m.MonthySalary35,new {@class="form-control", @onkeypress = "return isNumberKey(event)" })
                                            <div>@Html.ValidationMessageFor(m => m.MonthySalary35)</div>
                                            @Html.HiddenFor(m=>m.ProfessionalTaxId)
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group custom-form-group">
                                            <label class="required">Monthy Salary Rs. 3,501 - Rs. 5,000</label>
                                            @Html.TextBoxFor(m => m.MonthySalary35to5, new { @class = "form-control", @onkeypress = "return isNumberKey(event)" })
                                            <div>@Html.ValidationMessageFor(m => m.MonthySalary35to5)</div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group custom-form-group">
                                            <label class="required">Monthy Salary Rs. 5,001 - Rs. 7,500</label>
                                            @Html.TextBoxFor(m => m.MonthySalary5to75, new { @class = "form-control", @onkeypress = "return isNumberKey(event)" })
                                            <div>@Html.ValidationMessageFor(m => m.MonthySalary5to75)</div>
                                        </div>
                                    </div>

                                    <div class="col-md-3">
                                        <div class="form-group custom-form-group">
                                            <label class="required">Monthy Salary Rs. 7,501 - Rs. 10,000</label> <br>
                                            @Html.TextBoxFor(m => m.MonthySalary75to10, new { @class = "form-control", @onkeypress = "return isNumberKey(event)" })
                                            <div>@Html.ValidationMessageFor(m => m.MonthySalary75to10)</div>
                                        </div>
                                    </div>



                                </div>
                                <div class="row ">
                                    <div class="col-md-3">
                                        <div class="form-group custom-form-group">
                                            <label class="required">Monthy Salary Rs. 10,001 - Rs. 12,500</label>
                                            @Html.TextBoxFor(m => m.MonthySalary10to12, new { @class = "form-control", @onkeypress = "return isNumberKey(event)" })
                                            <div>@Html.ValidationMessageFor(m => m.MonthySalary10to12)</div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group custom-form-group">
                                            <label class="required">Above - Rs. 12,501</label>
                                            @Html.TextBoxFor(m => m.MonthySalaryAbove12, new { @class = "form-control", @onkeypress = "return isNumberKey(event)" })
                                            <div>@Html.ValidationMessageFor(m => m.MonthySalaryAbove12)</div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group custom-form-group">
                                            <label class="required">Value Date </label>
                                           @Html.EditorFor(m=>m.ValueDate,new {@class="form-control" })
                                            <div>@Html.ValidationMessageFor(m => m.ValueDate)</div>
                                        </div>
                                    </div>
                                </div>


                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-md-12 mb-lg text-center">
        <input type="submit" class="btn btn-primary" value="Submit" name="Button" id="btnproftax" />
        <input type="button" onclick="window.location.href='@Url.Action("ProfessionalTaxList", "RequirementMaster")';" class="btn btn-default" value="Close" id="btnclose" />
    </div>
</div>
}
<script>
    $('#ValueDate').datepicker({ minDate: 0, dateFormat: 'dd-MM-yy', changeYear: true });
    function isNumberKey(evt) {
        var charCode = (evt.which) ? evt.which : evt.keyCode;
        if (charCode != 46 && charCode > 31
          && (charCode < 48 || charCode > 57))
            return false;

        return true;
    }
    $('#MonthySalary35,#MonthySalary35to5,#MonthySalary5to75,#MonthySalary75to10,#MonthySalary10to12,#MonthySalaryAbove12').keypress(function (e) {

        var $this = $(this);
        if ((event.which != 46 || $this.val().indexOf('.') != -1) &&
           ((event.which < 48 || event.which > 57) &&
           (event.which != 0 && event.which != 8))) {
            event.preventDefault();
        }

    });
</script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/FoolProof/mvcfoolproof.unobtrusive.min.js")" type="text/javascript"></script>