@model IOAS.Models.SRBDetailsModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Connect UW">
    <!-- favicon icon -->
    <link rel="shortcut icon" href="images/connectuw-icn.png" />
    <title>Bill</title>
    <link href="https://fonts.googleapis.com/css?family=Poppins:400,400i,700,700i" rel="stylesheet">
    <link href="@Url.Content("~/Content/IOASContent/css/bootstrap.min.css")" rel="stylesheet" />
    <style>
        /*
            body{
                width: 21cm;
                height: 29.7cm;
                margin: 30mm 45mm 30mm 45mm;
                border: 1px solid #ccc;
            }
        */
        .umr-body {
            font-family: 'Poppins', sans-serif;
            font-size: 14px;
            color: #2a2a2a;
            padding: 15px 15px 15px 15px;
        }

        .umr-hd {
            text-align: center;
            border-bottom: 2px solid black;
            padding-bottom: 15px;
            padding-top: 10px;
        }

        .umr-hd1 {
            text-align: center;
            border-bottom: 2px solid black;
            padding-bottom: 15px;
            padding-top: 50px;
        }

        .umr-hd h2 {
            font-size: 16px;
            color: #000;
            font-weight: normal;
            text-align: left;
        }

            .umr-hd h2 em {
                font-size: 14px;
                float: left;
                font-style: normal;
            }

            .umr-hd h2 b {
                font-size: 14px;
                float: right;
                font-weight: normal;
            }

        .umr-hd-tt {
            font-size: 26px;
        }

        .umr-hd-stt {
            font-size: 16px;
            margin-bottom: 20px;
        }

        .sb-tt {
            margin-top: 0px;
            font-weight: normal;
            text-decoration: underline;
        }

        .mb-md {
            margin-bottom: 30px;
        }

        .mb-sm {
            margin-bottom: 15px;
        }

        .mt-md {
            margin-top: 30px;
        }

        .mb-sm {
            margin-bottom: 10px;
        }

        .umr-body li {
            margin-bottom: 10px;
        }

        .tp-tt {
            margin-top: 20px;
            text-decoration: underline;
            font-weight: bold;
        }

        .grey-bg {
            background: #eee;
            padding: 15px;
            width: 100%;
            margin: 0 auto;
        }

            .grey-bg .icn-box {
                padding: 10px;
            }

                .grey-bg .icn-box em {
                    font-size: 13px;
                    color: #000;
                    font-style: normal;
                    width: 100%;
                    display: inline-block;
                    margin-bottom: 5px;
                }

                .grey-bg .icn-box span {
                    font-size: 15px;
                    color: #000;
                    font-style: normal;
                }

        .cnt-bg {
            padding: 0px;
        }

        .cnt-bg1 {
            padding: 0px;
            padding-bottom: 10px;
            padding-top: 15px;
        }

        .gr-bg {
            background: #eee;
        }

        .logo-section .icsr-logo {
            width: 80px;
            float: left;
        }

        .logo-section .dts {
            width: calc(100% - 230px);
            float: left;
        }

        .logo-section h4 {
            margin-top: 0px;
        }

        .logo-section .iitm-logo {
            width: 100px;
            float: right;
        }

        .logo-section h5 {
            font-size: 16px;
        }

        .umr-body .table > tbody > tr > td, .umr-body .table > tbody > tr > th, .umr-body .table > tfoot > tr > td, .umr-body .table > tfoot > tr > th, .umr-body .table > thead > tr > td, .umr-body .table > thead > tr > th {
            padding: 8px;
        }

        .ct-tb em {
            width: 100%;
            display: inline-block;
            font-size: 13px;
            font-style: normal;
        }

        .ct-tb span {
            font-weight: bold;
        }

        .ct-tb {
            margin-bottom: 15px;
        }

        .ct-tr-tb {
            margin-bottom: 0px;
        }

            .ct-tr-tb.table-bordered > tbody > tr > td, .ct-tr-tb.table-bordered {
                border: 0px;
            }

        .ct-br-tb.table-bordered > tbody > tr {
            border-color: rgba(0,0,0,0.7);
        }

        .logo-section h3 {
            margin-top: 0px;
            margin-bottom: 3px;
            font-size: 33px;
        }

        .logo-section h4 {
            margin-bottom: 3px;
            font-weight: normal;
        }

        .logo-section h5 {
            margin-bottom: 3px;
            font-weight: normal;
            font-size: 19px;
            margin-top: 0px;
        }
    </style>
</head>
<body class="umr-body">


    <div class="umr-hd">
        <div class="row">
            <div class="col-md-10 col-md-offset-1">

                <div class="logo-section">

                    <img src="~/Content/InstituteLogo/icsr_logo.png" class="icsr-logo" />
                    <div class="dts">
                        <h3 style="padding-bottom: 5px;"><b>Centre for IC & SR, IIT Madras</b></h3>
                        <h5 style="padding-bottom: 5px;"><b>Chennai 600 036</b></h5>
                        <b>GSTIN: 33AAAAI3615G1Z6</b><b style="margin-left:5px;">PAN: AAAAI3615G</b>


                    </div>
                    <img src="~/Content/InstituteLogo/iitm_logo.png" class="iitm-logo" />

                </div>
            </div>
        </div>
    </div>
    <section style="padding-top: 10px;">
        <table class="table table-bordered ct-tb ct-tr-tb">
            <tbody>
                <tr>
                    <td>
                        <b>SRB Number :</b>
                    </td>
                    <td>
                        @Html.DisplayFor(m => m.SRBNumber)
                    </td>
                    <td>
                        <b>Department :</b>
                    </td>
                    <td>
                        @Html.DisplayFor(m => m.Department)
                    </td>
                    <td>
                        <b>Supplier Name :</b>
                    </td>
                    <td>
                        @Html.DisplayFor(m => m.SupplierName)
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>Tax Rate :</b>
                    </td>
                    <td>
                        @Html.DisplayFor(m => m.TaxRate)
                    </td>
                    <td>
                        <b>SRB Date :</b>
                    </td>
                    <td>
                        @Html.DisplayFor(m => m.SRBDate)
                    </td>
                    <td>
                        <b>Inward Date :</b>
                    </td>
                    <td>
                        @Html.DisplayFor(m => m.InwardDate)
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>Remarks :</b>
                    </td>
                    <td>
                        @Html.DisplayFor(m => m.Remarks)
                    </td>
                    <td>
                        <b>Amount :</b>
                    </td>
                    <td>
                        @Html.DisplayFor(m => m.NetTotalAmount)
                    </td>
                    <td>
                        <b>PONumber :</b>
                    </td>
                    <td>
                        @Html.DisplayFor(m => m.PONumber)
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>Invoice No :</b>
                    </td>
                    <td>
                        @Html.DisplayFor(m => m.InvoiceNumber)
                    </td>
                    <td>
                        <b>Invoice Date :</b>
                    </td>
                    <td>
                        @Html.DisplayFor(m => m.InvoiceDate)
                    </td>


                </tr>
            </tbody>
        </table>

    </section>

    <section class="cnt-bg">
        <div class="container-fluid">
            <div class="row">

                <div class="col-md-12">
                    <table class="table table-bordered ct-br-tb">
                        <tbody>
                            <tr>
                                <th><b>Item Category</b></th>
                                <th><b>Item Name</b></th>
                                <th><b>Item Number</b></th>
                                <th><b>Quantity</b></th>
                                <th><b>Item Value</b></th>
                                <th><b>Asset</b></th>
                                <th><b>Buyback</b></th>
                            </tr>

                            @if (Model.ItemCategory != null)
                            {
                                for (int i = 0; i < Model.ItemCategory.Length; i++)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(m => m.ItemCategory[i])
                                        </td>
                                        <td>
                                            @Html.DisplayFor(m => m.ItemName[i])
                                        </td>
                                        <td>
                                            @Html.DisplayFor(m => m.ItemNumber[i])
                                        </td>
                                        <td>
                                            @Html.DisplayFor(m => m.Quantity[i])
                                        </td>
                                        <td>
                                            @Html.DisplayFor(m => m.TotalAmount[i])
                                        </td>
                                        <td>
                                            @Html.DisplayFor(m => m.Asset[i])
                                        </td>
                                        <td>
                                            @Html.DisplayFor(m => m.selBuyBackNo[i])
                                        </td>
                                    </tr>
                                }
                            }

                            <tr>
                                <td colspan="4" class="text-right">
                                  Total SRB value(incl of all taxes)
                                </td>
                                <td>@(Model.NetTotalAmount+(Model.TaxRate))</td>
                                <td></td>
                               <td></td>
                            </tr>




                        </tbody>

                    </table>

                </div>

            </div>
        </div>
    </section>

    <!-- main js files -->
    <script src="js/plugins/jquery-2.2.4.min.js"></script>
    <script src="js/bootstrap.js"></script>

</body>
</html>
