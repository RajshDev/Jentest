        }

        .grey-bg {
            background: #eee;
            padding: 15px;
            width: 100%;
            margin: 0 auto;
        }

            .grey-bg .icn-box {
                padding: 10px;
            }

                .grey-bg .icn-box em {
                    font-size: 13px;
                    color: #000;
                    font-style: normal;
                    width: 100%;
                    display: inline-block;
                    margin-bottom: 5px;
                }

                .grey-bg .icn-box span {
                    font-size: 15px;
                    color: #000;
                    font-style: normal;
                }

        .cnt-bg {
            padding: 0px;
        }

        .cnt-bg1 {
            padding: 0px;
            padding-bottom: 10px;
            padding-top: 15px;
        }

        .gr-bg {
            background: #eee;
        }

        .logo-section .icsr-logo {
            width: 80px;
            float: left;
        }

        .logo-section .dts {
            width: calc(100% - 230px);
            float: left;
        }

        .logo-section h4 {
            margin-top: 0px;
        }

        .logo-section .iitm-logo {
            width: 100px;
            float: right;
        }

        .logo-section h5 {
            font-size: 16px;
        }

        .umr-body .table > tbody > tr > td, .umr-body .table > tbody > tr > th, .umr-body .table > tfoot > tr > td, .umr-body .table > tfoot > tr > th, .umr-body .table > thead > tr > td, .umr-body .table > thead > tr > th {
            padding: 8px;
        }

        .ct-tb em {
            width: 100%;
            display: inline-block;
            font-size: 13px;
            font-style: normal;
        }

        .ct-tb span {
            font-weight: bold;
        }

        .ct-tb {
            margin-bottom: 15px;
        }

        .ct-tr-tb {
            margin-bottom: 0px;
        }

            .ct-tr-tb.table-bordered > tbody > tr > td, .ct-tr-tb.table-bordered {
                border: 0px;
            }

        .ct-br-tb.table-bordered > tbody > tr > td {
            border-color: rgba(0,0,0,0.7);
        }

        .logo-section h3 {
            margin-top: 0px;
            margin-bottom: 3px;
            font-size: 28px;
        }

        .logo-section h4 {
            margin-bottom: 3px;
            font-weight: normal;
        }

        .logo-section h5 {
            margin-bottom: 3px;
            font-weight: normal;
            font-size: 15px;
            margin-top: 0px;
        }
    </style>
</head>
<body class="umr-body">
    <div class="umr-hd">
        <div class="row">
            <div class="col-md-10 col-md-offset-1">

                <div class="logo-section">
                    <img src="~/Content/InstituteLogo/icsr_logo.png" class="icsr-logo" />
                    <div class="dts">
                        <h3 style="padding-bottom: 5px;"><b>Centre for IC & SR, IIT Madras</b></h3>
                        <h5 style="padding-bottom: 5px;"><b>Chennai 600 036</b></h5>
                        <b>GSTIN: 33AAAAI3615G1Z6</b><b style="margin-left:5px;">PAN: AAAAI3615G</b>
                      
                    </div>
                    <img src="~/Content/InstituteLogo/iitm_logo.png" class="iitm-logo" />
                </div>
            </div>
        </div>
    </div>
    <section class="cnt-bg" style="padding-top: 10px;">
        <table class="table table-bordered ct-tb ct-tr-tb">
            <tbody>
                <tr><td colspan="6" class="text-center"><h4><b>Receipt</b></h4></td></tr>
                <tr>
                    <td>
                        <b>Receipt No :</b>
                    </td>
                    <td>
                        @Html.DisplayFor(m => m.ReceiptNo)
                    </td>
                    <td>
                        <b>Receipt Date :</b>
                    </td>
                    <td>
                        @Html.DisplayFor(m => m.ReceiptDate)
                    </td>
                    <td>
                        <b>Receipt Amount:</b>
                    </td>
                    <td>
                        @Html.DisplayFor(m => m.ReceiptAmt)
                    </td>
                </tr>
                <tr>
                   
                    <td>
                        <b>Invoice Amount :</b>
                    </td>
                    <td>
                        @Html.DisplayFor(m => m.InvoiceAmt)
                    </td>
                    <td>
                        <b>Invoice Number:</b>
                    </td>
                    <td>
                        @Html.DisplayFor(m => m.InvoiceNo)
                    </td>
                    <td>
                        <b>Project Number :</b>
                    </td>
                    <td>
                        @Html.DisplayFor(m => m.ProjectNo)
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>Project Description:</b>
                    </td>
                    <td>
                        @Html.DisplayFor(m => m.projsumm.ProjectTittle)
                    </td>
                    <td>
                        <b>PI Name :</b>
                    </td>
                    <td>
                        @Html.DisplayFor(m => m.PIName)
                    </td>
                    <td>
                        <b>Department:</b>
                    </td>
                    <td>
                        @Html.DisplayFor(m => m.Dept)
                    </td>

                </tr>
                <tr>
                    <td>
                        <b>Agency Name :</b>
                    </td>
                    <td>
                        @Html.DisplayFor(m => m.projsumm.AgencyName)
                    </td>
                    <td>
                        <b>Agency Address:</b>
                    </td>
                    <td >
                        @Html.DisplayFor(m => m.projsumm.AgencyAddress)
                    </td>
                    <td>
                        <b>Category :</b>
                    </td>
                    <td>
                        @Html.DisplayFor(m => m.Category)
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>Reference Number :</b>
                    </td>
                    <td>
                        @Html.DisplayFor(m => m.BillRefNumber)
                    </td>
                    <td>
                        <b>Invoice Value in Foreign Currency:</b>
                    </td>
                    <td>
                        @Html.DisplayFor(m => m.InvoiceValueInFRNCurrency) @Html.DisplayFor(m => m.InvoiceCurrencyCode)
                    </td>
                    <td>
                      
                    </td>
                    <td>
                        
                    </td>
                </tr>
            </tbody>
        </table>

    </section>

    <section class="cnt-bg">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-bordered ct-br-tb">
                        <tbody>
                            <tr>
                                <td colspan="2" class="text-center"><b>Receivables</b></td>
                            </tr>
                            <tr>
                                <td class="text-center" style="width:550px"><b>Head</b></td>
                                <td class="text-center"><b>Amount</b></td>
                            </tr>
                             @if (Model.RecList != null)
                                {
                                    var count = 0;
                                    foreach (var item in Model.RecList)
                                    {
                                        <tr>
                                            <td class="text-center">
                                                @Html.DisplayFor(m => item.Head)
                                            </td>
                                            <td class="text-right">
                                                @Html.DisplayFor(m => item.Amount)
                                            </td>
                                          
                                        </tr>
                                        count++;
                                    }
                                }                         
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
    <section class="cnt-bg">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-bordered ct-br-tb">
                        <tbody>
                            <tr>
                                <td colspan="3" class="text-center"><b>Journal</b></td>
                            </tr>
                            <tr>
                                <td class="text-center" style="width:550px"><b>Head</b></td>
                                <td class="text-center"><b>Transaction Type</b></td>
                                <td class="text-center"><b>Amount</b></td>
                            </tr>
                            @if (Model.Journal != null)
                            {
                                var count = 0;
                                foreach (var item in Model.Journal)
                                {
                                    <tr>
                                        <td class="text-center">
                                            @Html.DisplayFor(m => item.Head)
                                        </td><td class="text-center">
    @Html.DisplayFor(m => item.TransactionType)
</td>
                                        <td class="text-right">
                                            @Html.DisplayFor(m => item.Amount)
                                        </td>

                                    </tr>
                                    count++;
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>

    <section class="cnt-bg">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-bordered ct-br-tb">
                        <tbody>
                            <tr>
                                <td><b>Transaction No</b></td>
                                <td >
                                    @Html.DisplayFor(m => m.TransNo)
                                </td>
                                <td><b>Transaction Date</b></td>
                                <td>
                                    @Html.DisplayFor(m => m.TransDate)
                                </td>
                            </tr>
                            <tr>
                                <td><b>Bank Name</b></td>
                                <td>
                                    @Html.DisplayFor(m => m.Bank)
                                </td>
                                <td><b>Amount</b></td>
                                <td>
                                    @Html.DisplayFor(m => m.BankAmt)
                                </td>
                            </tr>
                            <tr>
                                <td colspan="4" style="padding:0px;">

                                    <table class="table table-bordered ct-tr-tb">
                                        <tbody>
                                            <tr>
                                                <td style="width:60%; border-right:1px solid #000; padding:0px; height:150px;">
                                                    <b style="padding:15px; display:inline-block; width:100%;">Remarks :</b>
                                                    &nbsp; @Html.DisplayFor(m => m.Description)

                                                </td>

                                            </tr>
                                        </tbody>
                                    </table>
                                </td>

                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>

    <section style="padding-top: 10px;">

        <table class="table table-bordered ct-tb ct-tr-tb">
            <tbody>
              
                <tr>
                    <td>
                        Signature : 
                    </td>

                </tr>
                <tr>
                    <td>
                      Name of the Signatory :
                    </td>
                </tr>
                <tr>
                    <td>
                        Designation :
                    </td>
                </tr>
            </tbody>
        </table>

    </section>



    <!-- main js files -->
    <script src="js/plugins/jquery-2.2.4.min.js"></script>
    <script src="js/bootstrap.js"></script>

</body>
</html>




