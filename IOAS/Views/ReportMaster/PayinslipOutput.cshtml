<body class="umr-body">

    @*<header class="umr-hd">
        <div class="col-md-8 col-md-offset-2">
            <div class="logo-section">
                <img src="@Url.Content("~/Content/IOASContent/img/icsr_logo.png")" class="icsr-logo">
