    <header class="umr-hd">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">

                    <div class="logo-section">
                        <img src="@Url.Content("~/Content/IOASContent/img/icsr_logo.png")" class="icsr-logo">
                        <div class="dts">
                            <h4><b>Centre for Industrial Consultancy and Sponsored Research</b></h4>
                            <h5><b>Indian Institute of Technology Madras</b></h5>
                        </div>
                        <img src="@Url.Content("~/Content/IOASContent/img/iitm_logo.png")" class="iitm-logo">
                    </div>
                </div>
            </div>
        </div>

    </header>
    <section class="cnt-bg">
        <div class="container-fluid">
            <div class="row mt-sm">
                @*<div class="col-md-12 mb20">
                    <h3 class="text-center">Receipt</h3>
                </div>*@
                <h4 class="text-center"><b>Pay in Slip</b></h4>
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table class="table table-bordered">
                            <tbody>
                                <tr class="fn-md">
                                    <td style="width:180px;"><b>Pay in Slip Number :</b></td>
                                    <td>@Html.DisplayFor(m => m.PaySlipReferenceNumber, new { @class = "form-control", @id = "txtpayinslipnumber" })</td>
                                    <td><b>Date of Pay in Slip :</b></td>
                                    <td style="width:180px;">@Html.DisplayFor(m => m.PayinslipDate, new { @class = "form-control", @id = "txtpayinslipdate" })</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    
                </div>

            <div class="row">
                <div class="col-md-6 col-sm-6 col-xs-6">
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <td style="width:180px;"><b>Project Number</b></td>
                                <td>@Html.DisplayFor(m => m.ProjectNumber, new { @class = "form-control", @id = "txtprojectnumber" })</td>
                            </tr>
                            <tr>
                                <td><b>Invoice No</b></td>
                                <td>@Html.DisplayFor(m => m.InvoiceNumber, new { @class = "form-control", @id = "txtinvoicenumber" })</td>
                            </tr>
                            <tr>
                                <td><b>PI Name</b></td>
                                <td>@Html.DisplayFor(m => m.NameofPI, new { @class = "form-control", @id = "txtpiname" })</td>
                            </tr>
                            <tr>
                                <td><b>Invoice Date</b></td>
                                <td>@Html.DisplayFor(m => m.Invoicedatestrng, new { @class = "form-control", @id = "txtpiname" })</td>
                            </tr>
                            <tr>
                                <td><b>Name of Client</b></td>
                                <td>@Html.DisplayFor(m => m.SponsoringAgencyName, new { @class = "form-control", @id = "txtagency" })</td>
                            </tr>
                            <tr>
                                <td><b>Address of Client</b></td>
                                <td>@Html.DisplayFor(m => m.CommunicationAddress, new { @class = "form-control", @id = "txtagencyaddress" })</td>
                            </tr>
                            <tr>
                                <td><b>District</b></td>
                                <td>@Html.DisplayFor(m => m.Agencydistrict, new { @class = "form-control", @id = "txtagencydistrict" })</td>
                            </tr>
                            <tr>
                                <td><b>State</b></td>
                                <td>@Html.DisplayFor(m => m.Agencystate, new { @class = "form-control", @id = "txtagencystate" })</td>
                            </tr>
                            <tr>
                                <td><b>GSTIN of Client</b></td>
                                <td>@Html.DisplayFor(m => m.GSTNumber, new { @class = "form-control", @id = "txtagencygstin" })</td>
                            </tr>
                        </tbody>
                    </table>
                   
                </div>

                <div class="col-md-6 col-sm-6 col-xs-6">
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <td><b>Taxable Value</b></td>
                                <td style="width:180px;" class="text-right">@(String.Format(Indian, "{0:N0}", Model.TaxableValue))</td>
                            </tr>
                            <tr>
                                <td><b>CGST</b> (@Html.DisplayFor(m => m.CGSTRate, new { @class = "form-control", @id = "txtcgstrate" })%)</td>
                                <td class="text-right">@(String.Format(Indian, "{0:N0}", Model.CGST))</td>
                            </tr>
                            <tr>
                                <td><b>SGST</b> (@Html.DisplayFor(m => m.SGSTRate, new { @class = "form-control", @id = "txtsgstrate" })%)</td>
                                <td class="text-right">@(String.Format(Indian, "{0:N0}", Model.SGST))</td>
                            </tr>
                            <tr>
                                <td><b>IGST</b> (@Html.DisplayFor(m => m.IGSTRate, new { @class = "form-control", @id = "txtigstrate" })%)</td>
                                <td class="text-right">@(String.Format(Indian, "{0:N0}", Model.IGST))</td>
                            </tr>
                            <tr class="fn-md">
                                <td><b>Total Invoice Value</b></td>
                                <td class="text-right">@(String.Format(Indian, "{0:N0}", Model.TotalInvoiceValue))</td>
                            </tr>
                        </tbody>
                    </table>
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <td><b>Amount Received</b></td>
                                <td class="text-right" style="width:180px;">@(String.Format(Indian, "{0:N0}", Model.AmountReceived))</td>
                            </tr>
                            <tr>
                                <td><b>TDS Receivable [IT]</b></td>
                                <td class="text-right">@(String.Format(Indian, "{0:N0}", Model.TDSReceived))</td>
                            </tr>
                            <tr>
                                <td><b>TDS Receivable [GST]</b></td>
                                <td class="text-right">@(String.Format(Indian, "{0:N0}", Model.TDSReceivableGST))</td>
                            </tr>
                            <tr>
                                <td><b>Mode of Payment</b></td>
                                <td>@Html.DisplayFor(m => m.ModeofPayment, new { @class = "form-control", @id = "txtmodeofpayment" })</td>
                            </tr>
                            <tr>
                                <td><b>Reference Number</b></td>
                                <td>@Html.DisplayFor(m => m.ReceiptReference, new { @class = "form-control", @id = "txtmodeofpayment" })</td>
                            </tr>
                            <tr>
                                <td><b>Instruments Date</b></td>
                                <td>@Html.DisplayFor(m => m.InstrumentsDate, new { @class = "form-control", @id = "txtmodeofpayment" })</td>
                            </tr>
                            <tr>
                                <td><b>Remarks / Name of the Test</b></td>
                                <td>@Html.DisplayFor(m => m.InstrumentsRemarks, new { @class = "form-control", @id = "txtmodeofpayment" })</td>
                            </tr>
                            <tr class="fn-md">
                                <td><b>Outstanding</b></td>
                                <td class="text-right">@(String.Format(Indian, "{0:N0}", Model.OutstandingAmount))</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>




            <div class="row  mt-sm">
                <div class="col-md-12">
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <td>
                                    Note : <br>
                                    1. To be sent IC&SR Office<br>
                                    2. GST (as stipulated by Central Govt) 18% w.e.f. 01.07.2017 to be deducted from the receipts to the Consultancy Projects, based on the invoice.<br>
                                    3. This is Invoice cum Receipt, no separate receipt will be issued.<br>
                                </td>
                                <td style="vertical-align:bottom; width:200px;">Signature of the PI :</td>
                            </tr>
                            <tr></tr>
                        </tbody>
                    </table>
                </div>
            </div>




        </div>



    </section>
