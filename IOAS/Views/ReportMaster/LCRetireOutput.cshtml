@model IOAS.Models.LCOpeningModel

@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Connect UW">
    <!-- favicon icon -->
    <link rel="shortcut icon" href="@Url.Content("~/Content/IOASContent/img/iitm_logo.png")" />
    <title>LC Retirement of Documents</title>
    <link href="https://fonts.googleapis.com/css?family=Poppins:400,400i,700,700i" rel="stylesheet">
    <link href="@Url.Content("~/Content/IOASContent/css/bootstrap.min.css")" rel="stylesheet" />

    <style>
        /*
            body{
                width: 21cm;
                height: 29.7cm;
                margin: 30mm 45mm 30mm 45mm;
                border: 1px solid #ccc;
            }
        */
        .umr-body {
            font-family: 'Poppins', sans-serif;
            font-size: 14px;
            color: #2a2a2a;
        }

        .umr-hd {
            text-align: center;
            border-bottom: 1px solid #d4d4d4;
            padding-bottom: 5px;
            padding-top: 10px;
            width: 100%;
            display: inline-block;
            margin-bottom: 10px;
        }

            .umr-hd h2 {
                font-size: 16px;
                color: #000;
                font-weight: normal;
                text-align: left;
            }

                .umr-hd h2 em {
                    font-size: 14px;
                    float: left;
                    font-style: normal;
                }

                .umr-hd h2 b {
                    font-size: 14px;
                    float: right;
                    font-weight: normal;
                }

        .umr-hd-tt {
            font-size: 26px;
        }

        .umr-hd-stt {
            font-size: 16px;
            margin-bottom: 20px;
        }

        .sb-tt {
            margin-top: 0px;
            font-weight: normal;
            text-decoration: underline;
        }

        .mb-md {
            margin-bottom: 30px;
        }

        .mb-sm {
            margin-bottom: 15px;
        }

        .mt-md {
            margin-top: 30px;
        }

        .mb-sm {
            margin-bottom: 10px;
        }

        .umr-body li {
            margin-bottom: 10px;
        }

        .tp-tt {
            margin-top: 20px;
            text-decoration: underline;
            font-weight: bold;
        }

        .grey-bg {
            background: #eee;
            padding: 15px;
            width: 100%;
            margin: 0 auto;
        }

            .grey-bg .icn-box {
                padding: 10px;
            }

                .grey-bg .icn-box em {
                    font-size: 13px;
                    color: #000;
                    font-style: normal;
                    width: 100%;
                    display: inline-block;
                    margin-bottom: 5px;
                }

                .grey-bg .icn-box span {
                    font-size: 15px;
                    color: #000;
                    font-style: normal;
                }

        .cnt-bg {
            padding: 15px 15px;
        }

        .gr-bg {
            background: #eee;
        }

        .logo-section .icsr-logo {
            width: 50px;
            float: left;
        }

        .logo-section .dts {
            width: calc(100% - 160px);
            float: left;
        }

        .logo-section h4 {
            margin-top: 0px;
        }

        .logo-section .iitm-logo {
            width: 50px;
            float: right;
        }

        .logo-section h5 {
            font-size: 16px;
        }

        .umr-body .table > tbody > tr > td, .umr-body .table > tbody > tr > th, .umr-body .table > tfoot > tr > td, .umr-body .table > tfoot > tr > th, .umr-body .table > thead > tr > td, .umr-body .table > thead > tr > th {
            padding: 5px;
        }

        .ct-tb em {
            width: 100%;
            display: inline-block;
            font-size: 14px;
            font-style: normal;
        }

        .ct-tb span {
            font-weight: bold;
        }

        .ct-tb {
            margin-bottom: 15px;
        }

        .ct-tr-tb {
            margin-bottom: 0px;
        }

            .ct-tr-tb.table-bordered > tbody > tr > td, .ct-tr-tb.table-bordered {
                border: 0px;
            }

        .ct-br-tb.table-bordered {
            border-color: #000;
        }

            .ct-br-tb.table-bordered > tbody > tr > td, .ct-br-tb.table-bordered > thead > tr > th {
                border-color: rgba(0,0,0,0.7);
            }

        .ct-tb-trp.table-bordered > tbody > tr > td, .ct-tb-trp.table-bordered, .ct-tb-trp.table > thead > tr > th {
            border: 0px;
        }

        .cnt-bg h4 {
            margin-top: 30px;
        }

        .mn-tt {
            font-size: 18px;
        }

        .mr-md {
            margin-right: 15px;
        }

        .wdt-auto {
            width: auto !important;
        }
    </style>

</head>
<body class="umr-body">

    <header class="umr-hd">
        <div class="col-md-10 col-md-offset-1">
            <div class="logo-section">
                <img src="@Url.Content("~/Content/IOASContent/img/icsr_logo.png")" class="icsr-logo">
                <div class="dts">
                    <h4>Centre for IC & SR, IIT Madras</h4>
                    <h5>Chennai 600 036</h5>
                    @*<h5>'ICSR Over Head'</h5>*@
                </div>
                <img src="@Url.Content("~/Content/IOASContent/img/iitm_logo.png")" class="iitm-logo">
            </div>
        </div>
    </header>
    <section>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-bordered ct-tb ct-tb-trp">
                        <tbody>
                            <tr>
                                <td colspan="2" class="text-center mn-tt">Retirement of Documents</td>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <em class="mr-md wdt-auto">Proj NO: @Html.DisplayFor(m => m.ProjectNumber)</em>
                                    <em class="mr-md wdt-auto">PO No: @Html.DisplayFor(m => m.PONumber)</em>
                                    <em class="mr-md wdt-auto">COMMIT NO : @Html.DisplayFor(m => m.CommitmentNumber)  </em>
                                </td>
                            </tr>
                            
                            <tr>
                                <td>
                                    From, <br>
                                    The Registrar, <br>
                                    I.I.T.,	 <br>
                                    Madras 600 036.
                                </td>
                                <td class="text-right">
                                    Dated:  <b>@Html.DisplayFor(m => m.LCRetireDate)</b><br>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <em>
                                        To,<br>
                                        The Branch Manager,<br>
                                        Canara Bank, I.I.T., Extn. Counter,- Chennai 600 036.<br>
                                    </em>
                                </td>
                                <td></td>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    Sir,<br>
                                    The Documents referable to LC / FLSC detailed below be kindly released to the Institute debiting account NO: @Html.DisplayFor(m => m.ProjectCategory) A/c – @Html.DisplayFor(m => m.BankAccountNumber) <br>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>

    <section class="cnt-bg">
        <div class="container-fluid">
            <div class="row">

                <div class="col-md-12">
                    <table class="table table-bordered ct-br-tb">
                        <thead>
                            <tr>
                                <th>IC / FLC No. & Date </th>
                                <th>Name & Address Of Beneficiary </th>
                                <th>Item To Be Imported / Purchased</th>
                                <th>Value</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>[1]</td>
                                <td>[2]</td>
                                <td>[3]</td>
                                <td>[4]</td>
                            </tr>
                            <tr>
                                <td>FLC @Html.DisplayFor(m => m.DraftLCNumber) ABLC @Html.DisplayFor(m => m.ABLCNumber)</td>
                                <td>
                                    @Html.DisplayFor(m => m.Beneficiary), @Html.DisplayFor(m => m.BeneficiaryAddress), @Html.DisplayFor(m => m.BeneficiaryCity), @Html.DisplayFor(m => m.BeneficiaryState), @Html.DisplayFor(m => m.BeneficiaryPostalCode), @Html.DisplayFor(m => m.BeneficiaryCountry)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => m.DescriptionofGoodsandService)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => m.LCDraftCurrency) &nbsp; @Html.DisplayFor(m => m.LCRetirementAmtinForgnCurrency) <br>
                                    (@Html.DisplayFor(m => m.LCRetirementAmountinWords))
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <p class="text-right">
                        Yours faithfully,
                    </p>

                </div>


            </div>
        </div>
    </section>

    <!-- main js files -->
    <script src="js/plugins/jquery-2.2.4.min.js"></script>
    <script src="js/bootstrap.js"></script>

</body>
</html>