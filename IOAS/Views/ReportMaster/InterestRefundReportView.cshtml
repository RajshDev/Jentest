        <section>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12 vw-dts-bg mb-tb">
                        <table class="table table-bordered mb-md" style="display:inline-table;">
                           
                            <tbody>
                                <tr>
                                    <td>
                                        <label>Project Number</label>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(m => m.ProjectNumber)
                                    </td>
                                    <td>
                                        <label>Financial Year</label>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(m => m.FinancialYear)
                                    </td>
                                </tr>



                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 vw-dts-bg mb-tb">
                        <table class="table table-bordered mb-md" style="display:inline-table;">
                            <thead>

                                <tr>
                                    <th>S.No</th>
                                    <th>InterestMonth</th>
                                    <th>Opening Balance (A)</th>
                                    <th>Receipt Received (B)</th>
                                    <th>Expenditure Total (C)</th>
                                    <th>Commitment Total (E)</th>
                                    <th>
                                        Actual Balane<br />
                                       @if (Model.CommitmentIncl_f)
                                       {
                                         <text>(A+B) - (C+E) = (F)</text>
                                       }
                                       else
                                       {
                                        <text>(A+B-C) = (F)</text>
                                       }
                                    </th>
                                    <th>Receipt Not Considered for interest (G)</th>
                                    <th>
                                        Amount Eligible for Interest
                                        <br />(F-G) = (H)
                                    </th>
                                    <th>Interest Rate per Annum (I)</th>
                                    <th>Interest Amount (J)</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Monthlist != null && Model.Monthlist.Count > 0)
                                {

                                    decimal sumamt = Model.Monthlist.Select(x => x.AmountEligibleforInterest).Sum();
                                    decimal interestamt = Model.Monthlist.Select(x => x.InterestAmount).Sum();

                                    foreach (var item in Model.Monthlist)
                                    {
                                        <tr>
                                            <td class="text-right">@item.SNo</td>
                                            <td class="text-right"><span>@item.Month</span></td>
                                            <td class="text-right">@item.OpeningBalance</td>
                                            <td class="text-right">@item.ReceiptReceived</td>
                                            <td class="text-right">@item.ExpenditureTotal</td>
                                            <td class="text-right">@item.CommitmentTotal</td>
                                            <td class="text-right">@item.ActualBalance</td>
                                            <td class="text-right">@item.ReceiptNotConsideredforinterest</td>
                                            <td class="text-right">@item.AmountEligibleforInterest</td>
                                            <td class="text-right"><span>@Math.Round(@Model.InterestPct,2) %</span></td>
                                            <td class="text-right">@item.InterestAmount</td>

                                        </tr>
                                    }
                                    <tr>
                                        <td colspan="8"><label class="pull-right">Total</label></td>
                                        <td class="text-right"><label>@sumamt</label></td>
                                        <td></td>
                                        <td class="text-right"><label>@Model.TotalIntrestAMT</label></td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </section>


