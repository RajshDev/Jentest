<body class="umr-body">

    <header class="umr-hd">
        <div class="col-md-10 col-md-offset-1">
            <div class="">
                <div class="">
                    <h4>CENTERE FOR INDUSTRIAL CONSULTANCY & SPONSORED RESEARCH</h4>
                    <h4>INDIAN INSTITUTE OF TECHNOLOGY MADRAS I.I.T CAMPUS, CHENNAI 600036</h4>
                </div>
            </div>
        </div>
    </header>
    <section>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-bordered ct-tb  ct-tr-tb">
                        <tbody>
                            <tr>
                                <th>No. @Model.OrderNo</th>
                                <th class="text-right">
                                    Dated: @string.Format("{0:dd-MM-yyyy}", DateTime.Now)
                                </th>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
    <section class="cnt-bg">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    @if (Model.isDuplicate)
                    {
                        <h5>Final Settlement (Duplicate)</h5>
                    }
                    <table class="table table-bordered ct-tb  ct-tr-tb">
                        <tbody>
                            <tr>
                                <td>
                                    Sub:
                                </td>
                                <td>
                                    Final  settlement  of	account  of <b><u>@Model.CandidateName</u></b>  <b><u>@Model.Designation</u></b> for  the <b><u>@Model.AgencyName</u></b>
                                    project on <b><u>@Model.ProjectTitle</u></b> in the  <b><u>@Model.Department</u></b> .
                                    <br>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Ref:
                                </td>
                                <td>
                                    Relieving order No. <b><u>@Model.OrderNo</u></b>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2">As  per  the  dues  report  received  in  response  to  this  office  relieving  order  cited,  there  are  no  dues  to be recovered from the above staff member.</td>
                            </tr>
                            <tr>
                                <td colspan="2">The   final   account   of  <b><u>@Model.CandidateName</u></b>  may,   therefore,please   be   settled   in   accordance   with   this letter.</td>
                            </tr>
                            <tr>
                                <th colspan="2" class="text-right"><br><br><br>
                                    <span>SENIOR MANAGER - HR </span>
                                    <span>(Project Recruitment)</span>
                                    <span>IC&SR</span>
                                </th>
                            </tr>
                            <tr>
                                <td colspan="2">To <br> Deputy Registrar (Project Accounts)</td>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <br><br>Copy to<br><br><br>
                                    <table class="table table-bordered ct-tb  ct-tr-tb">
                                        <tbody>
                                            <tr>
                                                <th>“	Prof.</th>
                                                <td>
                                                    <b><u>@Model.PIName</u></b> Project Co-ordinator<br>
                                                    <b><u>@Model.Department</u></b>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th>“	The Head,</th>
                                                <th>
                                                    <u>@Model.Department</u>
                                                </th>
                                            </tr>
                                            <tr>
                                                <th>"	@Model.InitialGender</th>
                                                <th>
                                                    <u>@Model.CandidateName</u><br>
                                                    <u>@Model.Department</u><br>
                                                    <u>IIT MADRAS</u>
                                                </th>
                                            </tr>
                                        </tbody>
                                    </table>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
    <!-- main js files -->   

</body>
</html>
