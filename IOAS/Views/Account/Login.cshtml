@model IOAS.Models.LogOnModel
@{
    ViewBag.Title = "Login";

    Layout = "~/Views/Shared/_LayoutLogin.cshtml";

}
<style>
    .tula-al{
width: 100%;
margin-top: 40px;
}
</style>
@*@using reCAPTCHA.MVC *@
@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", @id = "formLI", enctype = "multipart/form-data" }))
{
    <section class="bg-white" >
        <div class="container-fluid">
            <div class="row">

                <div class="col-md-6 col-lg-6 lg-pg-hgt text-center">
                    <img class="tula-al" src="~/Content/IOASContent/img/tula.png">
                </div>

                <div class="lg-ds lg-pg-hgt col-md-6 col-lg-6 col-xs-12">
                    <div class="lg-logo-bg">
                        <img src="~/Content/IOASContent/img/iitm-icsr-logo.png">
                    </div>
                    @*<div style="text-align: center;color:red;">
                            <h2>Testing site</h2>
                        </div>*@
                    <div class="lg-rgt-ds">

                        @Html.ValidationSummary(true, "", new { @class = "text-red" })
                        <h4 class="lg-hd">Login</h4>
                        <div class="lg-cnt">
                            <div class="custom-form-group">
                                <label>User Name</label>
                                @Html.TextBoxFor(M => M.UserName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.UserName)
                            </div>
                            <div class="custom-form-group">
                                @Html.PasswordFor(M => M.Password, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Password)
                            </div>
                        </div>
                        @*@Html.Recaptcha()
                        @Html.ValidationMessage("ReCaptcha")*@
                        <div class="g-recaptcha" data-callback="recaptchaCallback"
                             data-sitekey="6LdztccUAAAAANmy4O_-dGNMc178RuSZOAdkZs6z"></div>
                        <div class="lg-ft">
                            @*<a href="@Url.Action("ForgotPassword", "Account")" class="fd-btn">Forgot Password?</a>*@
                            <input type="submit" class="btn btn-primary" value="Login" id="btnlogin" />
                            <input type="reset" onclick="window.location.href='@Url.Action("Login", "Account")';" value="Reset" class="btn btn-default" />
                        </div>
                    </div>
                </div>

                

            </div>
        </div>
    </section>

}

<div id="myModal2" class="modal fade modal-error" role="dialog">
    <div class="modal-dialog modal-sm">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <i class="ion-android-cancel "></i>
                <h3 class="modal-title">Error Message</h3>
            </div>
            <div class="modal-body">

                <p>@ViewBag.Msg</p>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>
<script src="https://www.google.com/recaptcha/api.js" async defer></script>
<script type="text/javascript">

    $(document).ready(function () {
        var errMsg = '@ViewBag.Msg';
        if (errMsg != '') {
            $('#myModal2').modal('show');
        }
        function setHeight() {
            windowHeight = $(window).innerHeight();
            $('.lg-pg-hgt').css('min-height', windowHeight);
        };
        setHeight();

        $(window).resize(function () {
            setHeight();
        });
        localStorage.clear();
        sessionStorage.clear();
    });
    var checkCaptch = false;
    var recaptchaCallback = function (response) {
        if (response == "") {
            $("#btnlogin").addAttr('disabled');
            checkCaptch = false;
        }
        else {
            $("#btnlogin").removeAttr('disabled');
            checkCaptch = true;
        }
    };
    $("#btnlogin").click(function (e) {
        e.preventDefault();
       //if (checkCaptch && grecaptcha.getResponse() != "") {
            $('#formLI').submit();
       //}
    });
</script>
